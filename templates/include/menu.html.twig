{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <nav class="nav nav-pills justify-content-end">
        <span class="nav-item nav-link">Hi <strong>{{ app.user.username }}</strong></span>
        <span class="nav-item">
            <a class="nav-link{% if menu == 'projects' %} active{% endif %}" href="{{ url('project_list') }}">Projects</a>
        </span>
        {% if app.user.hasRole('ROLE_ADMIN') %}
        <span class="nav-item">
            <a class="nav-link" target="_blank" href="{{ grooming_chimps_api_base_url }}/admin">Admin</a>
        </span>
        {% endif %}
        <span class="nav-item">
            <a class="nav-link" href="{{ url('app_logout') }}">Logout</a>
        </span>
    </nav>
{% else %}
    <nav class="nav nav-pills justify-content-end">
        <span class="nav-item">
            <a class="nav-link{% if menu == 'homepage' %} active{% endif %}" href="{{ url("homepage") }}">Homepage</a>
        </span>
        <span class="nav-item">
            <a class="nav-link{% if menu == 'login' %} active{% endif %}" href="{{ url("app_login") }}">Login</a>
        </span>
    </nav>
{% endif %}
