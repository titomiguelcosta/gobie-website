{% extends "base.html.twig" %}

{% block navigation %}
    <nav class="navbar navbar-dark bg-dark static-top">
        <div class="container">
            <a class="navbar-brand" href="{{ path("homepage") }}">Grooming Chimps</a>
            <a class="btn btn-primary" href="{{ path("app_login") }}">Login</a>
        </div>
    </nav>

    <header class="masthead text-white text-center py-5 bg-dark-extra">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-5">Write Source Code</h1>
                    <h3>A gang of chimps will then do the analysis and work hard to identify issues</h3>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid bg-dark py-5">
        <div class="row">
            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                {% for email in app.flashes('email') %}
                    <div class="text-center text-white">
                        <p>An e-mail has been sent to your inbox and also notified the mail chimp.</p>
                        <p>Check your inbox at {{ email }}.</p>
                    </div>
                {% else %}
                    <p class="text-center text-white-50">Only audacious chimps will be granted an early access. Go ahead.</p>

                    {{ form_start(form) }}
                    <div class="form-row">
                        {% if form.email.vars.errors|length %}
                            <div class="col-sm-12 my-2 alert alert-danger" role="alert">
                                {{ form_errors(form.email) }}
                            </div>
                        {% endif %}

                        <div class="col-12 col-md-9 mb-2 mb-md-0">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Enter your e-mail...'}}) }}
                        </div>
                        <div class="col-12 col-md-3">
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-block btn-lg btn-primary'}}) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                {% endfor %}
            </div>
        </div>
    </div>

    <section class="features-icons bg-light-blue text-center py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                        <div class="features-icons-icon d-flex">
                            <i class="icon-screen-desktop m-auto text-primary"></i>
                        </div>
                        <h3>Code analysis</h3>
                        <p class="lead mb-0">Check the quality of the source code</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                        <div class="features-icons-icon d-flex">
                            <i class="icon-layers m-auto text-primary"></i>
                        </div>
                        <h3>Syntax check</h3>
                        <p class="lead mb-0">Validate the syntax of YAML, XLIFF or Twig files in the project</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-0 mb-lg-3">
                        <div class="features-icons-icon d-flex">
                            <i class="icon-check m-auto text-primary"></i>
                        </div>
                        <h3>Security</h3>
                        <p class="lead mb-0">Make sure you are not using libraries with known vulnerabilities</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block header %}{% endblock %}

{% block body %}{% endblock %}
